//exercício 3

import java.util.Scanner;

class Redondo {
  public static void main(String[] args) {
    
    Double raio;
    Double pi = 3.14;
    Double area;
    Scanner entrada = new Scanner(System.in);
    
    System.out.print("Qual seria o raio em centimetros do circulo: ");
    raio = entrada.nextDouble();
    
    area = pi * raio * raio;
    System.out.print("A área do ser redondo é " + area + "cm2.");
    
  }
}
