//exercício 1

import java.util.Scanner;

class Sobras {
  public static void main(String[] args) {
    
    Integer num1;
    Integer num2;
    Integer resto;
    Scanner entrada = new Scanner(System.in);
    
    System.out.print("Digite um número aí meu nobre: ");
    num1 = entrada.nextInt();
    
    System.out.print("Mais um aí meu caro dragão celestial: ");
    num2 = entrada.nextInt();
    
    resto = num1 % num2;
    
    System.out.print("Restou isso aqui o " + resto + " meu rei.");
    
  }
}
